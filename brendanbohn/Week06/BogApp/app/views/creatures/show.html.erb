<h1>Creature Show Page</h1>
<%= image_tag @creature.image.url(:medium ) %>
<h1> <%= @creature.name %> </h1>
<p> <%= @creature.desc %> </p>
<p> Submitted by <%= @creature.user.email %> </p>

<div> 
	<%= link_to "Back", root_path %> 
	<%= link_to "Edit", edit_creature_path %>
	<%= link_to "Delete", creature_path, method: :delete, data: { confirm: "Are you sure?"} %>
</div>